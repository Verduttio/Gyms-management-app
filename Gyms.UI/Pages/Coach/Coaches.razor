@page "/coaches"
@inherits CoachesBase

<style>
.table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
  background-color: lightskyblue;
  cursor: pointer;
}
</style>

@if(Coaches == null)
{
    <h3>Loading coaches...</h3>
}
else
{
     <h3 class="mb-5">Coaches</h3>

     <div class="py-3">
        <button type="button" class="btn btn-success py-2" onclick="location.href='/coaches/add'">Add coach</button>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Year of birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coach in Coaches)
            {
                <tr onclick="location.href='/coaches/@coach.Id'">
                    <td>@coach.Id</td>
                    <td>@coach.FirstName</td>
                    <td>@coach.LastName</td>
                    <td>@coach.YearOfBirth</td>
                </tr>
            }
        </tbody>
    </table>
}
