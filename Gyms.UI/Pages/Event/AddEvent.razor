@page "/events/add"
@inherits AddEventBase

<h3>Add event</h3>

<div class="form-group">
    <label for="titleInput">Title:</label>
    <input id="titleInput" class="form-control" type="text" @bind="@EventRequest.Title" />
</div>

<div class="form-group">
    <label for="dateInput">Date [dd/mm/yyyy]:</label>
    <input id="dateInput" class="form-control" type="text" @bind="@EventRequest.Date" />
</div>

<div class="form-group">
    <label for="timeInput">Time [hh:mm]:</label>
    <input id="timeInput" class="form-control" type="text" @bind="@EventRequest.Time" />
</div>

<div class="form-group">
    <label for="durationInput">Duration [hh:mm]:</label>
    <input id="durationInput" class="form-control" type="text" @bind="@EventRequest.Duration" />
</div>

<div class="form-group">
    <label for="clubIdInput">Club Id:</label>
    <input id="clubIdInput" class="form-control" type="number" @bind="@EventRequest.ClubId" />
</div>

<div class="form-group">
    <label for="coachIdInput">Coach Id:</label>
    <input id="coachIdInput" class="form-control" type="number" @bind="@EventRequest.CoachId" />
</div>

<div class="form-group">
    <label for="participantsLimitInput">Participants Limit:</label>
    <input id="participantsLimitInput" class="form-control" type="number" @bind="@EventRequest.ParticipantsLimit" />
</div>

<div class="form-group">
    <label for="regular">Regular:</label>
    <input id="regular" type="checkbox" @bind="@EventRequest.Regular" />
</div>


<div class="py-3">
  <button type="button" class="btn btn-outline-success py-2" @onclick="AddEvent">Add event</button>
</div>

