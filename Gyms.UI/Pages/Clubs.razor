@page "/clubs"
@inherits ClubsBase


<style>
.table-hover tbody tr:hover td, .table-hover tbody tr:hover th {
  background-color: lightskyblue;
  cursor: pointer;
}
</style>

@if(Clubs == null)
{
    <h3>Loading clubs...</h3>
}
else
{
    <h3 class="mb-5">Clubs</h3>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var club in Clubs)
            {
                <tr onclick="location.href='/clubs/@club.Id'">
                    <td>@club.Id</td>
                    <td>@club.Name</td>
                    <td>@club.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
